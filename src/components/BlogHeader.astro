---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---
<nav class="blog-nav">
  <div class="blog-nav-inner">
    <a href="/" class="home-link">Ishita Jindal</a>
    {title && <span class="nav-title">{title}</span>}
  </div>
</nav>

<style>
  .blog-nav {
    position: sticky;
    top: 0;
    z-index: 50;
    background: var(--blog-bg, #64A3AA);
    border-bottom: 1px solid var(--blog-border, #528D93);
    padding: 16px 0;
  }

  .blog-nav-inner {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    align-items: center;
    gap: 16px;
    min-width: 0;
  }

  .home-link {
    font-family: 'Cormorant Garamond', serif;
    font-size: 18px;
    font-style: italic;
    font-weight: 300;
    color: var(--blog-text-bright, #0E1F1F);
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .home-link:hover {
    color: var(--blog-accent, #8B1A3A);
  }

  .nav-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: var(--blog-text-secondary, #2E4F52);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-width: 0;
  }

  .nav-title::before {
    content: '/';
    margin-right: 12px;
    opacity: 0.3;
  }
</style>
