---
import Head from '../components/Head.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogFooter from '../components/BlogFooter.astro';

interface Props {
  post: any;
  headings: any[];
}

const { post, headings } = Astro.props;
const { title, description, pubDate, updatedDate, ogImage, heroImage, faq } = post.data;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Build JSON-LD
const jsonLd: any = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description,
  datePublished: pubDate.toISOString(),
  dateModified: (updatedDate || pubDate).toISOString(),
  author: {
    '@type': 'Person',
    name: 'Ishita Jindal',
    url: 'https://ishita.space',
  },
  publisher: {
    '@type': 'Person',
    name: 'Ishita Jindal',
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': Astro.url.href,
  },
};

// Add FAQ schema if present
if (faq && faq.length > 0) {
  jsonLd['@graph'] = [
    { ...jsonLd },
    {
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: faq.map((item: { question: string; answer: string }) => ({
        '@type': 'Question',
        name: item.question,
        acceptedAnswer: {
          '@type': 'Answer',
          text: item.answer,
        },
      })),
    },
  ];
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <Head
    title={`${title} — Ishita Jindal`}
    description={description}
    type="article"
    pubDate={pubDate}
    updatedDate={updatedDate}
    ogImage={ogImage}
    jsonLd={jsonLd}
  />
  <style is:global>
    :root {
      --blog-bg: #64A3AA;
      --blog-text: #0A1A1C;
      --blog-text-secondary: #1A3538;
      --blog-text-bright: #000000;
      --blog-accent: #7A1530;
      --blog-accent-hover: #9E1E42;
      --blog-border: #4D8A90;
      --blog-code-bg: #538E94;
    }

    *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

    ::selection {
      background: rgba(220, 130, 160, 0.35);
      color: var(--blog-text-bright);
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Cormorant Garamond', Georgia, 'Times New Roman', serif;
      font-size: 20px;
      line-height: 1.65;
      font-weight: 400;
      color: var(--blog-text);
      background: var(--blog-bg);
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* ——— POST CONTENT TYPOGRAPHY ——— */
    .post-content p {
      margin-bottom: 20px;
    }

    .post-content h2 {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 24px;
      font-weight: 500;
      margin-top: 48px;
      margin-bottom: 16px;
      color: var(--blog-text-bright);
      line-height: 1.3;
    }

    .post-content h3 {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 20px;
      font-weight: 500;
      margin-top: 36px;
      margin-bottom: 12px;
      color: var(--blog-text-bright);
      line-height: 1.3;
    }

    .post-content blockquote {
      border-left: 3px solid var(--blog-accent);
      padding-left: 20px;
      margin: 28px 0;
      font-style: italic;
      color: var(--blog-text-secondary);
    }

    .post-content ul,
    .post-content ol {
      margin-bottom: 20px;
      padding-left: 24px;
    }

    .post-content li {
      margin-bottom: 8px;
    }

    .post-content pre {
      background: var(--blog-code-bg);
      padding: 20px 24px;
      border-radius: 4px;
      overflow-x: auto;
      font-family: 'Space Mono', monospace;
      font-size: 14px;
      line-height: 1.6;
      margin: 24px 0;
    }

    .post-content code {
      font-family: 'Space Mono', monospace;
      font-size: 0.85em;
      background: var(--blog-code-bg);
      padding: 2px 6px;
      border-radius: 3px;
    }

    .post-content pre code {
      background: none;
      padding: 0;
      font-size: inherit;
    }

    .post-content a {
      color: var(--blog-accent);
      text-decoration: underline;
      text-decoration-color: rgba(232, 101, 138, 0.3);
      text-underline-offset: 3px;
      transition: text-decoration-color 0.2s ease;
    }

    .post-content a:hover {
      color: var(--blog-accent-hover);
      text-decoration-color: var(--blog-accent-hover);
    }

    .post-content img {
      max-width: 100%;
      height: auto;
      border-radius: 4px;
      margin: 28px 0;
    }

    .post-content hr {
      border: none;
      border-top: 1px solid var(--blog-border);
      margin: 40px 0;
    }

    .post-content strong {
      font-weight: 600;
    }
  </style>
</head>
<body>
  <BlogHeader title={title} />

  <article class="post-wrapper">
    {heroImage && (
      <div class="post-hero">
        <img src={heroImage} alt={title} />
      </div>
    )}

    <div class="post-container">
      <header class="post-header">
        <h1 class="post-title">{title}</h1>
        {description && <p class="post-description">{description}</p>}
        <div class="post-meta">
          <span class="post-author">Ishita Jindal</span>
          <span class="post-meta-sep">&middot;</span>
          <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        </div>
      </header>

      <div class="post-content">
        <slot />
      </div>
    </div>
  </article>

  <BlogFooter />
</body>
</html>

<style>
  .post-wrapper {
    width: 100%;
  }

  .post-hero {
    max-width: 960px;
    margin: 0 auto;
    padding: 32px 24px 0;
  }

  .post-hero img {
    width: 100%;
    height: auto;
    border-radius: 6px;
    display: block;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .post-container {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .post-header {
    padding-top: 48px;
    padding-bottom: 40px;
    border-bottom: 1px solid var(--blog-border);
    margin-bottom: 40px;
  }

  .post-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 400;
    line-height: 1.15;
    color: var(--blog-text-bright);
    letter-spacing: -0.01em;
    margin-bottom: 16px;
  }

  .post-description {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 18px;
    font-weight: 300;
    color: var(--blog-text-secondary);
    line-height: 1.5;
    margin-bottom: 24px;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: 'Space Mono', monospace;
    font-size: 12px;
    letter-spacing: 0.05em;
    color: var(--blog-text-secondary);
    text-transform: uppercase;
  }

  .post-meta-sep {
    opacity: 0.4;
  }

  .post-author {
    color: var(--blog-text);
  }

  @media (max-width: 640px) {
    .post-hero {
      padding-top: 16px;
    }

    .post-header {
      padding-top: 32px;
      padding-bottom: 28px;
      margin-bottom: 28px;
    }

    .post-title {
      font-size: 28px;
    }

    .post-description {
      font-size: 16px;
    }
  }
</style>
