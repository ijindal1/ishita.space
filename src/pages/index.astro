---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date): string {
  const month = date.toLocaleDateString('en-US', { month: 'short' });
  const year = date.getFullYear().toString().slice(-2);
  return `${month} '${year}`;
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#0A0A0F">
  <meta name="description" content="Ishita Jindal — Co-founder of Memory Store. Writing about AI and memory.">
  <title>Ishita Jindal</title>
  <link rel="alternate" type="application/rss+xml" title="Ishita Jindal" href="/rss.xml" />
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,300;1,400;1,600&family=Space+Grotesk:wght@300;400;500&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
  <style>
    *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --bg: #0A0A0F;
      --rose: #E8658A;
      --magenta: #C43D6B;
      --blush: #F2A0B5;
      --deep-teal: #1A6B63;
      --teal: #2AA89E;
      --cream: #F0E6E0;
      --text: #D4C8C0;
      --text-muted: #8A7D78;
    }

    ::selection {
      background: rgba(220, 130, 160, 0.35);
      color: var(--cream);
    }

    html, body {
      height: 100%;
      overflow: hidden;
    }

    body {
      font-family: 'Space Grotesk', sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.7;
      font-size: 15px;
      position: relative;
    }

    /* ——— SCAN LINES ——— */
    body::before {
      content: '';
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      pointer-events: none;
      z-index: 100;
      background: repeating-linear-gradient(
        to bottom,
        transparent 0px,
        transparent 1px,
        rgba(255,255,255,0.012) 1px,
        rgba(255,255,255,0.012) 2px
      );
    }

    /* ——— NOISE GRAIN ——— */
    body::after {
      content: '';
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      pointer-events: none;
      opacity: 0.03;
      z-index: 101;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
      background-size: 256px 256px;
    }

    /* ——— FULL-SCREEN VIDEO BACKGROUND ——— */
    .video-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
    }

    .video-bg video {
      position: absolute;
      top: 40%;
      left: 50%;
      transform: translate(-50%, -50%);
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      object-fit: cover;
    }

    .video-overlay {
      position: absolute;
      inset: 0;
      background:
        radial-gradient(ellipse at center, transparent 30%, rgba(10,10,15,0.6) 100%),
        linear-gradient(to bottom, transparent 60%, rgba(10,10,15,0.8) 100%),
        linear-gradient(to bottom, rgba(10,10,15,0.25) 0%, rgba(10,10,15,0.15) 50%, rgba(10,10,15,0.4) 100%);
      z-index: 1;
    }

    /* ——— PAGE OVERLAY — the single-screen layout ——— */
    .page {
      position: relative;
      z-index: 10;
      width: 100%;
      height: 100vh;
      display: grid;
      grid-template-rows: 1fr auto;
      grid-template-columns: 1fr 1fr;
      grid-template-areas:
        "hero sidebar"
        "links links";
    }

    /* ——— HERO — name + tagline ——— */
    .hero {
      grid-area: hero;
      align-self: start;
      padding: 10vh 0 0 8vw;
    }

    .hero h1 {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(44px, 7vw, 80px);
      font-weight: 300;
      font-style: italic;
      line-height: 1.05;
      letter-spacing: 0.01em;
      color: var(--cream);
      margin-bottom: 16px;
      text-shadow:
        0 2px 20px rgba(10,10,15,0.9),
        0 0 40px rgba(232,101,138,0.15),
        0 0 80px rgba(10,10,15,0.5);
    }

    .hero .tagline {
      font-family: 'Space Grotesk', sans-serif;
      font-size: clamp(13px, 1.4vw, 16px);
      font-weight: 300;
      color: var(--text);
      font-style: normal;
      letter-spacing: 0.02em;
      max-width: 400px;
      line-height: 1.6;
      text-shadow: 0 2px 16px rgba(10,10,15,0.95);
    }

    /* ——— SIDEBAR — writing index + projects ——— */
    .sidebar {
      grid-area: sidebar;
      align-self: center;
      justify-self: end;
      padding-right: 8vw;
      padding-top: 4vh;
      display: flex;
      flex-direction: column;
      gap: 32px;
      min-width: 340px;
    }

    /* ——— SECTION LABEL ——— */
    .section-title {
      font-family: 'Space Mono', monospace;
      font-size: 11px;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      color: var(--text);
      margin-bottom: 12px;
      text-shadow: 0 2px 16px rgba(10,10,15,0.95), 0 0 30px rgba(10,10,15,0.7);
    }

    /* ——— WRITING INDEX ——— */
    .writing ol {
      list-style: none;
      counter-reset: index;
    }

    .writing ol li {
      counter-increment: index;
      margin-bottom: 4px;
      display: flex;
      align-items: baseline;
      gap: 8px;
    }

    .writing ol li a {
      display: inline-flex;
      align-items: baseline;
      gap: 12px;
      color: var(--cream);
      text-decoration: none;
      font-size: clamp(13px, 1.2vw, 15px);
      padding: 4px 0;
      transition: color 0.2s ease, text-shadow 0.2s ease;
      text-shadow: 0 2px 16px rgba(10,10,15,0.95), 0 0 40px rgba(10,10,15,0.6);
    }

    .writing ol li a::before {
      content: counter(index, decimal-leading-zero);
      font-family: 'Space Mono', monospace;
      font-size: 11px;
      color: var(--rose);
      font-weight: 700;
      min-width: 20px;
      flex-shrink: 0;
      text-shadow: 0 2px 12px rgba(10,10,15,0.9), 0 0 12px rgba(232,101,138,0.3);
    }

    .writing ol li .date {
      font-family: 'Space Mono', monospace;
      font-size: 11px;
      color: var(--text);
      margin-left: auto;
      padding-left: 24px;
      white-space: nowrap;
      text-shadow: 0 2px 16px rgba(10,10,15,0.95), 0 0 30px rgba(10,10,15,0.7);
    }

    .writing ol li a:hover {
      color: var(--blush);
      text-shadow: 0 0 16px rgba(242,160,181,0.25);
    }

    .writing ol li a:hover::before {
      color: var(--blush);
    }

    /* ——— PROJECTS ——— */
    .projects ul {
      list-style: none;
    }

    .projects ul li {
      margin-bottom: 4px;
    }

    .projects ul li a {
      display: inline-flex;
      align-items: baseline;
      gap: 10px;
      color: var(--cream);
      text-decoration: none;
      font-size: clamp(13px, 1.2vw, 15px);
      padding: 4px 0;
      transition: color 0.2s ease, text-shadow 0.2s ease;
      text-shadow: 0 2px 16px rgba(10,10,15,0.95), 0 0 40px rgba(10,10,15,0.6);
    }

    .projects ul li a .project-marker {
      font-family: 'Space Mono', monospace;
      font-size: 11px;
      color: var(--teal);
      font-weight: 700;
      text-shadow: 0 2px 12px rgba(10,10,15,0.9), 0 0 12px rgba(42,168,158,0.3);
    }

    .projects ul li a .project-tag {
      font-family: 'Space Mono', monospace;
      font-size: 10px;
      color: var(--text);
      letter-spacing: 0.05em;
      text-shadow: 0 2px 16px rgba(10,10,15,0.95), 0 0 30px rgba(10,10,15,0.7);
    }

    .projects ul li a:hover {
      color: var(--blush);
    }

    .projects ul li a:hover .project-marker {
      color: var(--blush);
    }

    /* ——— FOOTER LINKS ——— */
    .links {
      grid-area: links;
      justify-self: start;
      align-self: end;
      padding: 0 0 5vh 8vw;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 13px;
    }

    .links a {
      color: var(--text);
      text-decoration: none;
      font-weight: 300;
      letter-spacing: 0.03em;
      transition: color 0.2s ease;
      text-shadow: 0 2px 16px rgba(10,10,15,0.95);
    }

    .links a:hover {
      color: var(--rose);
    }

    .links .dot {
      color: var(--text-muted);
      opacity: 0.4;
      user-select: none;
    }

    /* ——— RESPONSIVE — MOBILE ——— */
    @media (max-width: 768px) {
      .page {
        grid-template-rows: auto 1fr auto;
        grid-template-columns: 1fr;
        grid-template-areas:
          "hero"
          "sidebar"
          "links";
        padding: 0;
      }

      .hero {
        padding: 8vh 6vw 0;
      }

      .hero h1 {
        font-size: clamp(36px, 11vw, 56px);
      }

      .sidebar {
        align-self: start;
        justify-self: start;
        padding: 3vh 6vw;
        gap: 24px;
      }

      .writing ol li a,
      .projects ul li a {
        font-size: 14px;
      }

      .links {
        padding: 0 6vw 4vh;
        flex-wrap: wrap;
      }
    }

    @media (max-width: 420px) {
      .hero {
        padding: 6vh 5vw 0;
      }

      .hero .tagline {
        font-size: 13px;
      }

      .sidebar {
        padding: 2vh 5vw;
        gap: 20px;
      }

      .links {
        padding: 0 5vw 3vh;
        font-size: 12px;
        gap: 8px;
      }
    }
  </style>
</head>
